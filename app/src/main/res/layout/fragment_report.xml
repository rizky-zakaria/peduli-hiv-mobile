<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ReportFragment">

    <GridLayout
        android:layout_marginTop="35dp"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/cardPerjalanan"
            app:cardElevation="7dp"
            app:cardCornerRadius="7dp"
            android:padding="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo1"
                    android:src="@drawable/car"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/logo1"
                    android:text="Perjalanan"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardKondisi"
            android:layout_margin="10dp"
            android:padding="25dp"
            app:cardElevation="7dp"
            app:cardCornerRadius="7dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo2"
                    android:src="@drawable/health"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/logo2"
                    android:text="Kondisi"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/cardKonsumsi"
            app:cardElevation="7dp"
            app:cardCornerRadius="7dp"
            android:padding="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo3"
                    android:src="@drawable/obat"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/logo3"
                    android:text="Konsumsi Obat"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/cardAlarm"
            app:cardElevation="7dp"
            app:cardCornerRadius="7dp"
            android:padding="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo4"
                    android:src="@drawable/alarm"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/logo4"
                    android:text="Alarm"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>